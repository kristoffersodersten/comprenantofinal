<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Localization settings -->
    <key>CFBundleDevelopmentRegion</key>
    <string>en</string>

    <!-- Executable name -->
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>

    <!-- Unique identifier for the app -->
    <key>CFBundleIdentifier</key>
    <string>com.yourcompany.yourapp</string>

    <!-- Info dictionary version -->
    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>

    <!-- Display name of the app -->
    <key>CFBundleName</key>
    <string>$(PRODUCT_NAME)</string>

    <!-- Package type -->
    <key>CFBundlePackageType</key>
    <string>APPL</string>

    <!-- Version number for display -->
    <key>CFBundleShortVersionString</key>
    <string>1.0</string>

    <!-- Build version number -->
    <key>CFBundleVersion</key>
    <string>1</string>

    <!-- Indicates the app requires iOS -->
    <key>LSRequiresIPhoneOS</key>
    <true/>

    <!-- Launch screen storyboard -->
    <key>UILaunchStoryboardName</key>
    <string>LaunchScreen</string>

    <!-- Main storyboard file -->
    <key>UIMainStoryboardFile</key>
    <string>Main</string>

    <!-- Microphone usage description -->
    <key>NSMicrophoneUsageDescription</key>
    <string>We need microphone access for speech transcription and audio recording.</string>

    <!-- Speech recognition usage description -->
    <key>NSSpeechRecognitionUsageDescription</key>
    <string>We need speech recognition for transcription.</string>

    <!-- Location usage description -->
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>We need your location to provide location-based services.</string>

    <!-- App fonts -->
    <key>UIAppFonts</key>
    <array>
        <string>Inter-Regular.ttf</string>
        <string>Inter-Bold.ttf</string>
        <!-- Add other styles as needed -->
    </array>

    <!-- App Transport Security -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <true/>
    </dict>
</dict>
</plist>